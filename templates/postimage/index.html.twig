{% extends 'base.html.twig' %}

{% block title %}Postimage index{% endblock %}

{% block body %}
    <h1>Postimage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postimage in postimages %}
            <tr>
                <td>{{ postimage.id }}</td>
                <td>{{ postimage.url }}</td>
                <td>
                    <a href="{{ path('app_postimage_show', {'id': postimage.id}) }}">show</a>
                    <a href="{{ path('app_postimage_edit', {'id': postimage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_postimage_new') }}">Create new</a>
{% endblock %}
