{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
    <div style="display: flex">
        <h1 style="margin-right: 100px;">User Details</h1>
        <button type="button" style="background-color: #4e73df; border: 2px solid #4e73df; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                    <a href="{{ path('app_user_index') }}"  style="color: white; text-decoration: none;">Back To List</a>
                    </button>
    </div>
        <hr>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Full Name</th>
                            <td>{{ user.fullname }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ user.adress }}</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>{{ user.phoneNumer }}</td>
                        </tr>
                        <tr>
                            <th>Is Verified</th>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Is Activated</th>
                            <td>{{ user.isActivated ? 'Yes' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

            <button type="button" style="background-color: #4e73df; border: 2px solid #4e73df; border-radius: 10px;margin-bottom:15px; padding: 3px 20px; cursor: pointer;">
                   <a href="{{ path('app_user_edit', {'id': user.id}) }}"  style="color: white; text-decoration: none;">Edit</a>
            </button>
                
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
