    <div style="padding: 5px 100px;" >
            <div style="display: flex; justify-content: space-between; align-items: center; padding: 20px 0px;color:black " >
             <h1>List of users</h1>
            <div>    <button type="button" style="background-color: #4e73df; border: 2px solid #4e73df; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                    <a href="{{ path('app_user_new') }}"  style="color: white; text-decoration: none;">Create New</a>
                </button>
            
                
                </div>
             </div>

    <table class="table" id="dataTable">
        <thead>
            <tr style="border-bottom: 1px solid #F6F6F6;">
                <th style="text-align: center;border-right: 1px solid #e3e6f0;border-left: 1px solid #e3e6f0">Id</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Email</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Roles</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Fullname</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Adress</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">PhoneNumer</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">IsVerified</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">IsActivated</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;border-left: 1px solid #e3e6f0">
                    {{ user.id }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.email }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.roles ? user.roles|json_encode : '' }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.fullname }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.adress }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.phoneNumer }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.IsActivated ? 'Yes' : 'No' }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">

                     <div style="display: flex; justify-content: space-around; align-items: center;">
                    <button type="button" style="background-color: #4e73df; border: 2px solid #4e73df; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"  style="color: white; text-decoration: none;">Show</a>
                    </button>
                   

                     {% if user.isActivated %}
                            <form action="{{ path('user_deactivate', {'id': user.id}) }}" method="post" style="margin: 0;">
                                <button type="submit" style="background-color: red; color: white; border: 2px solid white; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                                    Deactivate
                                </button>
                            </form>
                    {% else %}
                            <form action="{{ path('user_activate', {'id': user.id}) }}" method="post" style="margin: 0;">
                                <button type="submit" style="background-color: green; color: white; border: 2px solid white; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                                    Activate
                                </button>
                            </form>
                        {% endif %}
                    

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% block javascripts %}
    <script>
        const searchField = document.getElementById('global-search');
        const rows = document.querySelectorAll('#dataTable tbody tr');
       

        

        searchField.addEventListener('input', function() {
            const searchValue = searchField.value.trim().toLowerCase();

            rows.forEach(row => {
                const email= row.cells[1].textContent.trim().toLowerCase();
                const fullName= row.cells[3].textContent.trim().toLowerCase();
                const adress = row.cells[4].textContent.trim().toLowerCase();
                const isActivated = row.cells[7].textContent.trim().toLowerCase();
                if (fullName.includes(searchValue) || email.includes(searchValue) || adress.includes(searchValue)
                || isActivated.includes(searchValue) ) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
{% endblock %}
    
