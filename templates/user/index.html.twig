
{% extends 'baseback.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

       <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
            
                <!-- ***** Logo Start ***** -->
                    <a href="{{ path('app_backoffice') }}" class="logo">
         <img src="/images/user/logoback.png" alt="User Image" style="max-width: 200px; max-height: 100px;background:white">                    </a>


            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('home') }}"
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Home</span></a>
                    
                <a class="nav-link" href="{{ path('app_user_index') }}"
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Gestion User</span></a>
                
                <a class="nav-link" href="{{ path('app_logout') }}"
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Logout</span></a>
            </li>
           
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" id="global-search" placeholder="Search for..."
                                aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
                                aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small"
                                            placeholder="Search for..." aria-label="Search"
                                            aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>

                       

                       
                            

                        <!-- Nav Item - User Information -->
                       
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {% if app.user %}
                                        <div style="font-size:20px;margin-top:-60px;margin-right:30px;font-weight:bold;color:black" >
                                        <div style="color: black;">{{ app.user.fullName }}</div>
                                        
                                        
                                {% endif %}         
                            
                            </a>
                           
                            
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
    <div style="padding: 5px 100px;" >
            <div style="display: flex; justify-content: space-between; align-items: center; padding: 20px 0px;color:black " >
             <h1>List of users</h1>
            <div>    <button type="button" style="background-color: #4e73df; border: 2px solid #4e73df; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                    <a href="{{ path('app_user_new') }}"  style="color: white; text-decoration: none;">Create New</a>
                </button>
            
                
                </div>
             </div>

    <table class="table" id="dataTable">
        <thead>
            <tr style="border-bottom: 1px solid #F6F6F6;">
                <th style="text-align: center;border-right: 1px solid #e3e6f0;border-left: 1px solid #e3e6f0">Id</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Picture</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Email</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Roles</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Fullname</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">Adress</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">PhoneNumer</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">IsVerified</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">IsActivated</th>
                <th style="text-align: center;border-right: 1px solid #e3e6f0;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;border-left: 1px solid #e3e6f0">
                    {{ user.id }}</td>
                 <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {% if user.image %}
                        <img src="/images/user/{{ user.image }}" alt="User Image" style="max-width: 100px; max-height: 50px;"></td>
                    {% else %}
                        <img src="/images/user/userpic.png" alt="Default Profile Picture" style="max-width: 100px; max-height: 50px;">
                    {% endif %}
                    
                    
                    
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.email }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.roles ? user.roles|json_encode : '' }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.fullname }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.adress }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.phoneNumer }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">
                    {{ user.IsActivated ? 'Yes' : 'No' }}</td>
                <td style="text-align: center;border-right: 1px solid #e3e6f0;">

                     <div style="display: flex; justify-content: space-around; align-items: center;">
                    <button type="button" style="background-color: #4e73df; border: 2px solid #4e73df; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"  style="color: white; text-decoration: none;">Show</a>
                    </button>
                   

                     {% if user.isActivated %}
                            <form action="{{ path('user_deactivate', {'id': user.id}) }}" method="post" style="margin: 0;">
                                <button type="submit" style="background-color: red; color: white; border: 2px solid white; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                                    Deactivate
                                </button>
                            </form>
                    {% else %}
                            <form action="{{ path('user_activate', {'id': user.id}) }}" method="post" style="margin: 0;">
                                <button type="submit" style="background-color: green; color: white; border: 2px solid white; border-radius: 10px; padding: 3px 20px; cursor: pointer;">
                                    Activate
                                </button>
                            </form>
                        {% endif %}
                    

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% block javascripts %}
    <script>
        const searchField = document.getElementById('global-search');
        const rows = document.querySelectorAll('#dataTable tbody tr');
       

        

        searchField.addEventListener('input', function() {
            const searchValue = searchField.value.trim().toLowerCase();

            rows.forEach(row => {
                const email= row.cells[1].textContent.trim().toLowerCase();
                const fullName= row.cells[3].textContent.trim().toLowerCase();
                const adress = row.cells[4].textContent.trim().toLowerCase();
                const isActivated = row.cells[7].textContent.trim().toLowerCase();
                if (fullName.includes(searchValue) || email.includes(searchValue) || adress.includes(searchValue)
                || isActivated.includes(searchValue) ) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
{% endblock %}
    
    </div>
{% endblock %}
